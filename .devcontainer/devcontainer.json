{
  "name": "CamOnDagster",
  "build": {
    "dockerfile": "Dockerfile",
    "cacheFrom": "camondagster-app:latest",
    "context": ".."
  },
  "runArgs": [
    "--cpus=4",
    "--memory=4g",
    "--init"
  ],
  "postCreateCommand": "echo 'set -a && [ -f /workspaces/CamOnDagster/.env ] && source /workspaces/CamOnDagster/.env && set +a' >> ~/.bashrc",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "settings": {
        "dbt.profilesDir": "${containerWorkspaceFolder}/dbt",
        "python.linting.enabled": true,
        "python.envFile": "${containerWorkspaceFolder}/.env"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbt-labs.dbt"
      ]
    }
  },
  "containerEnv": {
    "PYTHONPATH": "/workspaces/CamOnDagster",
    "ENV_FILE": "${containerWorkspaceFolder}/.env"
  }
}